citHeader("To cite hdtg in publications use:")

citEntry(
  entry    = "Article",
  title    = "Zigzag path connects two Monte Carlo samplers: Hamiltonian counterpart to a piecewise deterministic Markov process",
  author   = personList(as.person("Akihiko Nishimura"),
                                   as.person("Zhenyu Zhang"),
                                   as.person("Marc A. Suchard")),
  journal  = "Journal of the American Statistical Association",
  year     = "2024",
  textVersion = paste("Akihiko Nishimura, Zhenyu Zhang, and Marc A. Suchard (2024)",
                              "Zigzag path connects two Monte Carlo samplers: Hamiltonian counterpart to a piecewise deterministic Markov process,",
                              "Journal of the American Statistical Association,",
                              "<doi:10.1080/01621459.2024.2395587>."))
                              
